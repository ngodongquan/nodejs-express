extends ../layout/common

block content
    h1 Update User
    if errors
        each error in errors
            p(class='text-danger')= error
    form(action=`/users/finallyUpdate/${user.id}`, method="POST")
        .form-group
            label(for="email") Email
            input#email.form-control(type="text", name="email", value=user.email)
            label(for="password") Password
            input#password.form-control(type="password", name="password", value=user.password)
            label(for="name") User Name
            input#name.form-control(type="text", name="username", value=user.username)
            label(for="fullname") Full name
            input#phone.form-control(type="text", name="fullname", value=user.fullname)
            label(for="birthday") Birthday
            input#phone.form-control(type="text", name="birthday", value=user.birthday)
        button Update
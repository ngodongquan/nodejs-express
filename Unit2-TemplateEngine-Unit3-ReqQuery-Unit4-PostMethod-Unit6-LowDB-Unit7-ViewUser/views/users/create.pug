extends ../layout/common

block content
    h1 Create User
    if errors
        each error in errors
            p(class='text-danger')= error
    form(action="/users/create", method="POST")
        .form-group
            label(for="email") Email
            input#email.form-control(type="text", name="email", value=value ? value.email : '')
            label(for="email") Password
            input#password.form-control(type="password", name="password", value=value ? value.password : '')
            label(for="name") Name
            input#name.form-control(type="text", name="name", value=value ? value.name : '')
            label(for="phone") Phone
            input#phone.form-control(type="text", name="phone", value=value ? value.phone : '')
        button Create
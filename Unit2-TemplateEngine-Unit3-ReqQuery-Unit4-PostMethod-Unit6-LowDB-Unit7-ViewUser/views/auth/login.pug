extends ../layout/common

block content
    h1 Login
    if errors
        each error in errors
            p(class='text-danger')= error
    form(action="/auth/login", method="POST")
        .form-group
            label(for="email") Email
            input#name.form-control(type="text", name="email", value=value ? value.email : '')
            label(for="password") Password
            input#password.form-control(type="password", name="password", value=value ? value.password : '')
        button Login